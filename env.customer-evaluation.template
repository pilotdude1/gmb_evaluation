# Customer Evaluation System Environment Variables
# Copy this to .env and update with your actual values

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/customer-evaluation
N8N_API_KEY=your_n8n_api_key_here

# Supabase (should already be configured)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# API Security
CUSTOMER_EVALUATION_API_SECRET=your_secure_api_secret_here

# Optional: External integrations for future use
APIFY_API_TOKEN=your_apify_token_here
CLICKUP_API_TOKEN=your_clickup_token_here
AGILE_CRM_API_KEY=your_agile_crm_key_here

# Development settings
NODE_ENV=development
