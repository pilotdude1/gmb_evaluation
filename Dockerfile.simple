FROM node:20-slim

# Install only essential tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create user
RUN useradd -m -s /bin/bash nodeuser
RUN echo "nodeuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set working directory
WORKDIR /app

# Switch to user
USER nodeuser

# Default command
CMD ["bash"]
