{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "dev-dist",
    "playwright-report",
    "test-results",
    "tests",
    "static",
    "markdown-files",
    "sql-files",
    "scripts",
    "grafana",
    "prometheus",
    "postgres",
    ".svelte-kit",
    "*.config.js",
    "*.config.ts",
    "*.config.cjs",
    "*.config.mjs",
    "*.config.json",
    "*.lock",
    "*.log",
    "*.tmp",
    "*.cache",
    "coverage",
    ".nyc_output",
    ".coverage",
    "*.lcov",
    "*.tsbuildinfo",
    ".next",
    ".nuxt",
    ".serverless",
    ".fusebox",
    ".dynamodb",
    ".tern-port",
    ".vscode-test",
    ".yarn",
    ".pnp.*",
    "*.tgz",
    "*.tar.gz",
    "*.zip",
    "*.rar",
    "*.7z",
    "*.bz2",
    "*.gz",
    "*.xz",
    "*.lzma",
    "*.lz4",
    "*.zst",
    "*.br",
    "*.deflate",
    "*.gzip",
    "*.brotli",
    "*.zlib",
    "*.inflate",
    "*.decompress",
    "*.extract",
    "*.unpack",
    "*.unzip",
    "*.untar",
    "*.unrar",
    "*.un7z",
    "*.unbz2",
    "*.ungz",
    "*.unxz",
    "*.unlzma",
    "*.unlz4",
    "*.unzst",
    "*.unbr",
    "*.undeflate",
    "*.ungzip",
    "*.unbrotli",
    "*.unzlib",
    "*.uninflate",
    "*.undecompress",
    "*.unextract",
    "*.ununpack"
  ]
}
